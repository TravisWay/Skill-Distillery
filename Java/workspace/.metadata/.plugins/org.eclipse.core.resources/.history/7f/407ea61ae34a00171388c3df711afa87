package caesar;

import java.lang.reflect.Array;
import java.util.Scanner;

import javax.swing.plaf.basic.BasicInternalFrameUI.InternalFramePropertyChangeListener;

public class caesar {

	char[] ch;
	
	public void Run() {

		Scanner input = new Scanner(System.in);

		System.out.println("Enter the string to be ciphered:");

		String casear = input.nextLine();

		System.out.println("How many places would you like to move this: ");

		int move = input.nextInt();

		Convert(casear);
		Cipher(move);

	}

	public char[] Convert(String ToChange) {

		ch = ToChange.toCharArray();

		for (int i = 0; i < ch.length; i++) {

			System.out.print(ch[i] + " ");
		}

		return ch;

	}
	
	public String Cipher(int move){
		
		for (int i = 0; i < ch.length; i++) {
			
			if (ch[i] >= 65 && ch[i]<=90 || ch[i] >=97 && ch[i]<= 122){
				
				if((ch[i] + move) >= 90 || (ch[i] + move) >= 122){
					
					
				}
				
				
			}
			
		}
		
		
		return null;
		
		
		
	}

}
