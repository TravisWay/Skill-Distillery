package Game;

public class Enemyeasy extends Badguys {

	public Enemyeasy() {
		super();
	}

	

	public Enemyeasy(int health, int damagedone) {
		setDamagedone(damagedone);
		setHealth(100);
		// TODO Auto-generated constructor stub
	}



	int damagedone = 100;

	
	public int takehit() {
		// TODO Auto-generated method stub
		System.out.println("You have hit the enemy. " + damagedone + "pts taken away. They have "
				+ (health - damagedone) + " remaining");

		health = health - damagedone;
		return health;

	}


	

	public void dead() {
		System.out.println("This enemy is dead");

	}



	@Override
	public int attack() {
		// TODO Auto-generated method stub
		return 0;
	}

}
