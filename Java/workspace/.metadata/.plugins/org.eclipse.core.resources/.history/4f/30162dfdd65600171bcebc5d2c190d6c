package caesar;

import java.util.concurrent.Callable;

public class CaesarCipher implements Callable<String> {
	int shift;
	String msg;
	CaesarCipherDecrypter decrypter;

	public CaesarCipher(int shift, String msg) {
		super();
		this.shift = shift;
		this.msg = msg;
		decrypter= new CaesarCipherDecrypter(msg, shift);
	}

	@Override
	public String call() throws Exception {
		String done = decrypter.decryptText(msg);
		return done;
	}


	
}
