package caesar;

import java.util.Scanner;

public class caesar {

	
	public void Run(){
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter the string to be ciphered:" );
		
		String casear = input.nextLine();
		
		System.out.println("How many places would you like to move this: ");
		
		int move = input.nextInt();
		
		Cipher(casear, move);
		
		
	}
	
	
	
	public String Cipher(String ToChange, int ChangeNumber){
		
		char[] ch=ToChange.toCharArray();
		
		
		for (int i = 0; i < ch.length; i++) {
			
		
		System.out.print(ch[i] + " ");
		
		}
		String finalProduct = "";
		
		return finalProduct;
		
		
	}

}
