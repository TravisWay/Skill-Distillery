package caesar;

import java.util.concurrent.Callable;

public class CaesarCipher implements Callable<String> {
	private int shift;
	String msg = "P SLHYULK AV WYVNYHT HA AOL ZRPSS KPZAPSSLYF";
	private CaesarCipherDecrypter decrypter = new CaesarCipherDecrypter(msg,shift);

	@Override
	public String call() throws Exception {
		String done = decrypter.decryptText(msg);
		return done;
	}
}
