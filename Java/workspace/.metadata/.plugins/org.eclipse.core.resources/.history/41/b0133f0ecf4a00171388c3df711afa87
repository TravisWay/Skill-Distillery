package caesar;

import java.util.Scanner;

public class caesar {

	static String casear;
	
	static int move;
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner input = new Scanner(System.in);
		
		System.out.println("Enter the string to be ciphered:" );
		
		casear = input.nextLine();
		
		System.out.println("How many places would you like to move this: ");
		
		move = input.nextInt();
		
		Cipher(casear, move);
	}
	
	static void Cipher(String ToChange, int ChangeNumber){
		
		char[] ch=ToChange.toCharArray();
		
		
		for (int i = 0; i < ch.length; i++) {
			
		
		System.out.println(ch[i]);
		
		}
		
		
		
		
	}

}
