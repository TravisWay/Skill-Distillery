package examples;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Iterator;
import java.util.List;
import java.util.concurrent.Callable;


public class Race implements Callable<Race> {
  static List<String> theList;

  public void run() {
    //synchronized (theList) {
		
	
	  for (int i = 0; i < 20; i++) {
      theList.add(Thread.currentThread().getName() + i);
    }
  }
 // }
  public static void main(String[] args) throws Exception {
    Race race = new Race();
    theList = Collections.synchronizedList(new ArrayList<String>());
    //List<String> races = Collections.synchronizedList (theList);
   
    
    
    Thread thread1 = new Thread();
    Thread thread2 = new Thread();
    Thread thread3 = new Thread();

    thread1.start();
    thread2.start();
    thread3.start();

    thread1.join();
    thread2.join();
    thread3.join();
  //  synchronized (races) {
		
	
    Iterator<String> it = theList.iterator();
    while (it.hasNext()) {
      System.out.println(it.next());
    }

    System.out.println("Size of the list " + theList.size());
  }
@Override
public String call() throws Exception {
	
	return "Done";
}}
//}